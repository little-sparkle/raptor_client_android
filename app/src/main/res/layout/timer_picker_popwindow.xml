<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" android:paddingTop="20dp">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff">
        <TextView
            android:id="@+id/tv_cancel_timer_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13.6dp"
            android:background="#fff"
            android:text="取消"
            android:textColor="#464646"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13.6dp"
            android:text="请选择预约时间"
            android:textColor="#d6d6d6"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_ok_timer_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView"
            android:layout_marginRight="10dp"
            android:text="确定"
            android:textColor="#ffbc00"
            android:textSize="14sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#fff"
        android:paddingBottom="30dp"
        android:paddingTop="30dp">
        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/picker_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            app:npv_DividerColor="#d6d6d6"
            app:npv_ShowCount="2"
        />
        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/picker_hour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:npv_DividerColor="#d6d6d6"
        />
        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/picker_minute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            app:npv_DividerColor="#d6d6d6"
            app:npv_ShowCount="3"

        />

    </LinearLayout>

</LinearLayout>