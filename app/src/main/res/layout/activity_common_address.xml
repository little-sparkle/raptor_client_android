<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f0f0f0">


    <RelativeLayout
        android:id="@+id/relative_title_common_address"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fafafa">
        <Button
            android:id="@+id/bt_back_common_address"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tv_title_common_address"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bt_back"/>
        <TextView
            android:id="@+id/tv_title_common_address"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/Common_address"
            android:textSize="16sp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_common_address_setting"
        android:layout_width="match_parent"
        android:layout_height="112.5dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relative_title_common_address"
        android:layout_marginTop="25dp"
        android:background="#fff">

        <RelativeLayout
            android:id="@+id/relative_common_address_home"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="10dp">


            <ImageView
                android:id="@+id/imgv_common_home"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true" android:background="@drawable/home"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/imgv_common_home"
                android:text="输入回家地址"
                android:textColor="#d3d3d3"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignBottom="@+id/imgv_common_home"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/right_arrow"/>

        </RelativeLayout>
        <TextView android:layout_width="match_parent"
                  android:layout_height="0.5dp"
                  android:layout_below="@+id/relative_common_address_home"
                  android:layout_marginLeft="10dp"
                  android:background="#d3d3d3"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/imgv_common_address_company"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:background="@drawable/company"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgv_common_address_company"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imgv_common_address_company"
                android:text="输入公司地址"
                android:textColor="#d3d3d3"
                android:textSize="14sp"/>
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignBottom="@+id/imgv_common_address_company"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/right_arrow"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>